<a href="/posts/{{id}}" class="text-reset text-decoration-none">
  <section class="accordion my-3">
    <div class="accordion-item p-3">
      <h2 class="accordion-header" id="blog-title">
          {{title}}
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <strong>Posted on {{format_date createdAt}}</strong>
          <p id="blog-content">
              {{content}}
          </p>
        </div>
      </div>
    </div>
  </section>
</a>